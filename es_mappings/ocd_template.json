{
    "template": "ocd_*",
    "settings": {
        "index": {
            "analyzer": "dutch",
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "query": {
                "default_field": "all_text"
            },
            "analysis": {
                "analyzer": {
                    "text_nl": {
                        "type": "custom",
                        "filter": [
                            "asciifolding",
                            "lowercase",
                            "custom_word_delimiter"
                        ],
                        "tokenizer": "standard"
                    }
                },
                "filter": {
                    "custom_word_delimiter": {
                        "type": "word_delimiter",
                        "split_on_numerics": false,
                        "generate_number_parts": true,
                        "preserve_original": true,
                        "stem_english_possesive": false,
                        "catenate_words": false,
                        "catenate_numbers": true,
                        "split_on_case_change": false,
                        "generate_word_parts": true
                    }
                }
            }
        }
    },
    "mappings": {
        "_default_": {
            "_all": {
                "enabled": false
            },
            "_index": {"enabled": true},
            "dynamic_templates": [
                {
                    "original_object_urls": {
                        "path_match": "meta.original_object_urls.*",
                        "mapping": {
                            "type": "string",
                            "index": "no"
                        }
                    }
                }
            ],
            "properties": {
                "meta": {
                    "type": "object",
                    "properties": {
                        "source": {
                            "type": "string",
                            "index": "not_analyzed"
                        },
                        "original_object_id": {
                            "type": "string",
                            "index": "not_analyzed"
                        },
                        "rights": {
                            "type": "string",
                            "index": "not_analyzed"
                        },
                        "original_object_urls": {
                            "type": "object"
                        },
                        "processing_started": {
                            "type": "date",
                            "format": "dateOptionalTime"
                        },
                        "processing_finished": {
                            "type": "date",
                            "format": "dateOptionalTime"
                        }
                    }
                },
                "all_text": {
                    "type": "string",
                    "analyzer": "text_nl",
                    "index_options": "offsets"
                },
                "title": {
                    "type": "string",
                    "analyzer": "text_nl",
                    "index_options": "offsets"
                },
                "description": {
                    "type": "string",
                    "analyzer": "text_nl",
                    "index_options": "offsets"
                },
                "date": {
                    "type": "date",
                    "format": "dateOptionalTime"
                },
                "date_granularity": {
                    "type": "short"
                },
                "authors": {
                    "type": "multi_field",
                    "fields": {
                        "authors": {
                            "type" : "string",
                            "analyzer": "text_nl"
                        },
                        "untouched": {
                            "type": "string",
                            "index": "not_analyzed"
                        }
                    }
                },
                "media_urls": {
                    "index_name": "media_url",
                    "properties": {
                        "url": {
                            "type": "string",
                            "index": "no"
                        },
                        "width": {
                            "type": "integer"
                        },
                        "height": {
                            "type": "integer"
                        },
                        "content_type": {
                            "type": "string",
                            "index": "not_analyzed"
                        }
                    }
                },
                "source_data": {
                    "type": "object",
                    "properties": {
                        "data": {
                            "type": "string",
                            "index": "no"
                        },
                        "content_type": {
                            "type": "string",
                            "index": "not_analyzed"
                        }
                    }
                }
            }
        }
    }
}
